#include <iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int a, b, z, k, c, s, v, y, x, st1 = 6, st2 = 2, x1, y1, a1, b1, c1, n;
	cout << " Хадание 2 \n\n Введите значение А = ";
	scanf_s("%d", &a1);
	cout << " Введите значение B = ";
	scanf_s("%d", &b1);
	cout << " Введите значение C = ";
	scanf_s("%d", &c1);
	cout << "\n Задание 3\n\n Введите значение А = ";
	scanf_s("%d", &a);
	cout << " Введите значение В = ";
	scanf_s("%d", &b);
	cout << " Введите значение С = ";
	scanf_s("%d", &c);
	cout << "\n Задание 4\n\n Введите значение х для нахождения значения функции ";
	scanf_s("%d", &x);
	cout << "\n  Задание 5\n\n Введите ещё одно значение х для нахождения значения другой функции ";
	scanf_s("%d", &x1);

	n = a;
	a1 = b1;
	c1 = b1;
	n = c1;

	v = a;
	z = b;
	s = c;
	c = v;
	b = s;
	a = z;

	y = 3 * pow(x, st1) - 6 * pow(x, st2) - 7;
	y1 = 4 * pow(x1 - 3, st1) - 7 * (x - 3) * (x - 3) * (x - 3) + 2;

	printf("\n\n Хадание 2 \n\n А = %d \n\n B = %d \n\n C = %d \n\n Задание 3 \n\n ответы \n\n А = %d \n\n B = %d \n\nC = %d \n\n Здание 4 \n\n Ответ \n\n Значение функции(у) = %d \n\n Задание 5 \n\n Ответ \n\n Значение другой функции(у) = %d \n\n", n, b1, c1, a, b, c, y, y1);

}
