
#include <iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int gr, gr1;
	const float pi = 3.14;
	float rad, rad1;
	cout << "\n\n Задание 1 \n\n Введите значение угла(от 0 до 360 градусов), чтобы найти его значение в радианах ";
	scanf_s("%d", &gr);
	cout << "\n\n Задание 2 \n\n Введите значение угла(в радианах 0 < a < 2Пи), чтобы найти его значение в градусах ";
	scanf_s("%f", &rad1);

	rad = (pi * gr) / 180;
	gr1 = (rad1 * 180) / pi;

	printf("\n\n Задание 1 \n\n Ответ \n\n Значение угла в радианах = %f \n\n Задание 2 \n\n Ответ \n\n Значение угла в градусах %d\n\n", rad, gr1);
}
