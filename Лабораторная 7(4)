#include <iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int v1, v2, s, t;

	cout << " Введите Скорость первого(v1) = ";
	scanf_s("%d", &v1);
	cout << " Введите скорость второго(v2) = ";
	scanf_s("%d", &v2);
	cout << " Введите время через которое два автомобиля удалятся друг от друга(t) = ";
	scanf_s("%d", &t);
	
	s = v1 * t + v2 * t;

	printf("\n\n Ответы\n\n Расстояние между двумя машинами, если они удалятся друг от друга %d\n", s);
}
