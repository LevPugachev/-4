#include <iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int A, b, A1, b1, c1;
	cout << "\n\n Задание 6 \n\n Введите значение А для вычисления А в 8 степени ";
	scanf_s("%d", &A);
	cout << "\n\n Задание 7 \n\n Введите значение А для вычисления А в 15 степени ";
	scanf_s("%d", &A1);

	b = A * A;
	b = b * b;
	b = b * b;
	A = b;

	b1 = A1 * A1;
	c1 = b1 * A1;
	b1 = b1 * c1;
	c1 = b1 * b1;
	b1 = b1 * c1;
	A1 = b1;

	printf("\n\n Задание 6 \n\n Ответ \n\n А^8 = %d\n\n Задание 7 \n\n Ответ \n\n A^15 = %d\n\n", A, A1);
}
