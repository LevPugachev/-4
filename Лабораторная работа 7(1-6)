#include <iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int gr, gr1, a, x, y, v1, v2, t, s1, a1, b, a2, a3, b1, b2, c1, c2;
	const float pi = 3.14;
	float rad, rad1, s, v, x1, y2, x2;
	cout << "\n Задание 1 \n\n Введите значение угла(от 0 до 360 градусов), чтобы найти его значение в радианах ";
	scanf_s("%d", &gr);
	cout << "\n\n Задание 2 \n\n Введите значение угла(в радианах 0 < a < 2Пи), чтобы найти его значение в градусах ";
	scanf_s("%f", &rad1);
	cout << "\n\n Задание 3 \n\n Введите количесвто килограммов(х) конфет ";
	scanf_s("%d", &x);
	cout << " Введите цену за этот килограм конфет ";
	scanf_s("%d", &a);
	cout << " введите количество киллограмов(у), чтобы найти цену У кг конфет ";
	scanf_s("%d", &y);
	cout << "\n\n Задание 4 \n\n Введите Скорость первого(v1) = ";
	scanf_s("%d", &v1);
	cout << " Введите скорость второго(v2) = ";
	scanf_s("%d", &v2);
	cout << " Введите время через которое два автомобиля удалятся друг от друга(t) = ";
	scanf_s("%d", &t);
	cout << "\n\n Задание 5 \n\n Введите значение А(А не равно 0) для решения линейного уравнения ";
	scanf_s("%d", &a1);
	cout << " Введите значение В для решения линейного уравнения ";
	scanf_s("%d", &b);

	cout << "\n\n Задание 6 \n\n Линейное уравнение: \n A1*x + B1*y = C1\n A2*x + B2* y = C2\n\n";
	cout << " Введите значение А1 для решения системы линейных уравнении ";
	scanf_s("%d", &a3);
	cout << " Введите значение А2 для решения системы линейных уравнении ";
	scanf_s("%d", &a2);
	cout << " Введите значение В1 для решения системы линейных уравнений ";
	scanf_s("%d", &b1);
	cout << " Введите значение В2 для решения системы линейных уравнений ";
	scanf_s("%d", &b2);
	cout << " Введите значение С1 для решения системы линейных уравнений ";
	scanf_s("%d", &c1);
	cout << " Введите значение С2 для решения системы линейных уравнений ";
	scanf_s("%d", &c2);

	rad = (pi * gr) / 180;
	gr1 = (rad1 * 180) / pi;

	s = (float)a / x;
	v = y * s;

	s1 = v1 * t + v2 * t;

	if ((a1 > 0) or (a1 < 0)) {
		x1 = (float)(-b) / a1;
	}
	while (a1 == 0) {
		cout << " А ровно 0, поэтому нет решения\n";
		return 0;
	}

	x2 = (float)(c2 - (b2 * c1)) / ((b1 * a2) - a3);
	y2 = (float)(c1 - (a3 * x2)) / b1;

	printf("\n\n Задание 1 \n\n Значение угла в радианах = %f \n\n Задание 2 \n\n Значение угла в градусах %d\n\n Задание 3 \n\n Цена У кг конфет = %f \n\n Цена 1 кг конфет = %f \n\n Задание 4 \n\n Расстояние через которое два автомобиля удалятся друг от друга = %d \n\n Задание 5 \n\n Линейное уравнение = %f \n\n Задание 6 \n\n Х = %f \n\n Y = %f \n\n", rad, gr1, v, s, s1, x1, x2, y2);
}
