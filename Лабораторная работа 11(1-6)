#include <iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int a1, b1, z, x, a, b, c, a2, b2, c2, x1, y, n, m;
	cout << "\n\n Задание 1 \n\n Введите А ";
	cin >> a1;
	cout << " Введите B ";
	cin >> b1;

	cout << "\n\n Задание 2 \n\n Введите первое число ";
	scanf_s("%d", &a);
	cout << " Введите второе число ";
	scanf_s("%d", &b);
	cout << " Введите третье число ";
	cin >> c;

	cout << "\n\n Задание 3 \n\n Введите А ";
	cin >> a2;
	cout << " Ввелите В ";
	cin >> b2;
	cout << " введите С ";
	cin >> c2;

	cout << "\n\n Задание 4 \n\n Введите значение Х ";
	cin >> x1;
	cout << " Введите значение У ";
	cin >> y;

	cout << "\n\n Задание 5 \n\n Введите число число(n) ";
	cin >> n;

	cout << "\n\n Задание 6 \n\n Введите целове значение в диапозоне от 1-999 ";
	cin >> m;

	x = a1;
	z = b1;
	if (a1 != b1) {
		if ((a1 > b1) or (b1 > a1)) {
			a1 = z;
			b1 = x;
			cout << "\n\n Задание 1 \n\n А = \n\n" << a1;
			cout << " B = \n\n" << b1;
		}
		else {
			z = 0;
			x = 0;
			cout << "\n\n Задание 1 \n\n А = \n\n" << x;
			cout << " B = \n\n" << z;
		}

		if (b <= c && b <= a) {
			cout << "\n\n Задание 2 \n\n" << a + c;
		}
		else {
			if (a <= c && a <= b) {
				cout << "\n\n Задание 2 \n\n" << b + c;
			}
			else {
				cout << "\n\n Задание 2 \n\n" << b + a;
			}
		}
	}

	if (abs(a2 - b2) < abs(a2 - c2)) {
		cout << "\n\n Задание 3 \n\n Точка: " << b2 << endl;
		if ((a2 - b2) > 0)
			cout << " Расстояние: " << a2 - b2;
		else if ((a2 - b2) < 0)
			cout << " Расстояние: " << (a2 - b2) * -1;
	}
	else {
		cout << "\n\n Задание 3 \n\n Точка: " << c2 << endl;
		if ((a2 - c2) > 0)
			cout << " Расстояние: " << a2 - c2;
		else if ((a2 - c2) < 0)
			cout << " Расстояние: " << (a2 - c2) * -1;
	}

	if (x1 > 0 && y > 0) {
		cout << "\n\n Задание 4 \n\n Первая четверть";
	}
	else if (x1 < 0 && y>0) {
		cout << "\n\n Задание 4 \n\n Вторая четверть";
	}
	else if (x1 < 0 && y < 0) {
		cout << "\n\n Задание 4 \n\n Третья четверть";
	}
	else
		cout << "\n\n Задание 4 \n\n Четвертая четверть";

	if ((n % 2 == 0) and (n > 0)) {
		cout << "\n\n Задание 5 \n\n Число - положительное и чётное \n\n n = " << n;
	}
	if ((n % 2 != 0) and (n > 0)) {
		cout << "\n\n Задание 5 \n\n Число - положительное и не чётное \n\n n = " << n;
	}
	if (n == 0) {
		cout << "\n\n Задание 5 \n\n Число - нулевое \n\n n = " << n;
	}
	if ((n < 0) and (n % 2 == 0)) {
		cout << "\n\n Задание 5 \n\n Число - отрицательное и чётное \n\n n = " << n;
	}
	if ((n < 0) and (n % 2 != 0)) {
		cout << "\n\n Задание 5 \n\n Число - отрицательное и не чётное \n\n n = " << n;
	}

	if ((m > 0) and (m < 1000)) {
		if ((m / 100 > 0 && m / 100 < 10) && (m % 2 == 0)) cout << "\n\n Задание 6 \n\n Число трёхзначное и чётное ";
		else if ((m / 10 > 0 && m / 10 < 10) && (m % 2 == 0)) cout << "\n\n Задание 6 \n\n Число двухзначное и чётное ";
		else if ((m / 10 == 0) && (m % 2 == 0)) cout << "\n\n Задание 6 \n\n Число однозначное и чётное ";

		if ((m / 100 > 0 && m / 100 < 10) && (m % 2 != 0)) cout << "\n\n Задание 6 \n\n Число трёхзначное и не чётное ";
		else if ((m / 10 > 0 && m / 10 < 10) && (m % 2 != 0)) cout << "\n\n Задание 6 \n\n Число двухзначное и не чётное ";
		else if ((m / 10 == 0) && (m % 2 != 0)) cout << "\n\n Задание 6 \n\n Число однозначное и не чётное ";

	}
	else {
		cout << "\n\n Задание 6 \n\n Число не входит в диапозон от 1-999 ";
		return 0;
	}
}
