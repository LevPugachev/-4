#include <iostream>
#include <stdio.h>
#include <math.h>
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int a1, b1, x, a, b, c, y, n, m;
	float Ax, Ay, Bx, By, Cx, Cy, r;
	cout << "\n\n Задание 1 \n\n Введите А ";
	cin >> a1;
	cout << " Введите B ";
	cin >> b1;

	cout << "\n\n Задание 2 \n\n Введите первое число ";
	scanf_s("%d", &a);
	cout << " Введите второе число ";
	scanf_s("%d", &b);
	cout << " Введите третье число ";
	cin >> c;

	cout << "\n\n Задание 3 \n\n Введите первую координату точки А ";
	cin >> Ax;
	cout << " Введите вторую координату точки А ";
	cin >> Ay;
	cout << " Ввелите первую координату точки В ";
	cin >> Bx;
	cout << " Ввелите вторую координату точки В ";
	cin >> By;
	cout << " введите первую координату точки С ";
	cin >> Cx;
	cout << " введите вторую координату точки С ";
	cin >> Cy;

	cout << "\n\n Задание 4 \n\n Введите значение Х ";
	cin >> x;
	cout << " Введите значение У ";
	cin >> y;

	cout << "\n\n Задание 5 \n\n Введите целое число ";
	cin >> n;

	cout << "\n\n Задание 6 \n\n Введите целове значение в диапозоне от 1-999 ";
	cin >> m;

	if (a1 != b1) {
		if (a1 > b1) {
			b1 = a1;
		}
		else {
			a1 = b1;
		}
		cout << "\n\n Ответы \n\n Задание 1 \n\n А = " << a1 << ' ' << " b = " << b1;
	}
	else {
		a1 = b1 = 0;
		cout << "\n\n Ответы \n\n Задание 1 \n\n a = " << a1 << ' ' << " b = " << b1;
	}

	if (b <= c && b <= a) {
		cout << "\n\n Заданиеи 2 \n\n А+С = " << a + c;
	}
	else {
		if (a <= c && a <= b) {
			cout << "\n\n Заданиеи 2 \n\n В+С = " << b + c;
		}
		else {
			cout << "\n\n Заданиеи 2 \n\n В+A = " << b + a;
		}
	}

	if ((abs(Ax) + abs(Cx)) < (abs(Ax) + abs(Bx))) {
		if ((abs(Ay) + abs(Cy)) < (abs(Ay) + abs(By))) {
			cout << "\n\n Задание 3 \n\n Точка: С\n\n";
			r = sqrt((Cx - Ax) * (Cx - Ax) + (Cy - Ay) * (Cy - Ay));
			cout << " Расстояние: " << r;
		}
	}
	else {
		cout << "\n\n Задание 3 \n\n Точка: В\n\n";
		r = sqrt((Bx - Ax) * (Bx - Ax) + (By - Ay) * (By - Ay));
		cout << " Расстояние: " << r;
	}

	if (x > 0 && y > 0) {
		cout << "\n\n Задание 4 \n\n Первая четверть";
	}
	else if (x < 0 && y>0) {
		cout << "\n\n Задание 4 \n\n Вторая четверть";
	}
	else if (x < 0 && y < 0) {
		cout << "\n\n Задание 4 \n\n Третья четверть";
	}
	else
		cout << "\n\n Задание 4 \n\n Четвертая четверть";
	
	if(n == 0)
		cout << "\n\n Задание 5 \n\n Это нулевое число ";
	if ((n % 2 == 0) and (n > 0))
		cout << "\n\n Задание 5 \n\n Это положительное чётное число";
	if ((n % 2 == 0) and (n < 0))
		cout << "\n\n Задание 6 \n\n Это отрицательное чётное число";
	if ((n % 2 != 0) and (n > 0))
		cout << "\n\n Задание 6 \n\n Это положительное нечётное число";
	if ((n % 2 != 0) and (n < 0))
		cout << "\n\n Задание 6 \n\n Это отрицательное нечёное число";

	if ((m > 0) or (m < 1000)) {
		if ((m / 100 > 0 && m / 100 < 10) and (m % 2 == 0)) cout << "\n\n Задание 6 \n\n Трёхзначное чётное \n\n";
		else if ((m / 10 > 0 && m / 10 < 10) and (m % 2 == 0)) cout << "\n\n Задание 6 \n\n Двухзначное чётное \n\n";
		else if ((m / 10 == 0) and (m % 2 == 0)) cout << "\n\n Задание 6 \n\n Однозначное чётное \n\n";
		if ((m / 100 > 0 && m / 100 < 10) and (m % 2 != 0)) cout << "\n\n Задание 6 \n\n Трёхзначное нечётное \n\n";
		else if ((m / 10 > 0 && m / 10 < 10) and (m % 2 != 0)) cout << "\n\n Задание 6 \n\n Двухзначное нечётное \n\n";
		else if ((m / 10 == 0) and (m % 2 != 0)) cout << "\n\n Задание 6 \n\n Однозначное нечётное \n\n";
	}
	else {
		cout << "\n\n Задание 6 \n\n Данное число не входит в диапозон от 1 до 999 \n\n";
	}
}
