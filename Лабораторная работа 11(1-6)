#include <iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int a1, b1, x, a, b, c, a2, b2, c2, y, n, m;
	cout << "\n\n Задание 1 \n\n Введите А ";
	cin >> a1;
	cout << " Введите B ";
	cin >> b1;

	cout << "\n\n Задание 2 \n\n Введите первое число ";
	scanf_s("%d", &a);
	cout << " Введите второе число ";
	scanf_s("%d", &b);
	cout << " Введите третье число ";
	cin >> c;

	cout << "\n\n Задание 3 \n\n Введите А ";
	cin >> a2;
	cout << " Ввелите В ";
	cin >> b2;
	cout << " введите С ";
	cin >> c2;

	cout << "\n\n Задание 4 \n\n Введите значение Х ";
	cin >> x;
	cout << " Введите значение У ";
	cin >> y;

	cout << "\n\n Задание 5 \n\n Введите целое число ";
	cin >> n;

	cout << "\n\n Задание 6 \n\n Введите целове значение в диапозоне от 1-999 ";
	cin >> m;

	if (a1 != b1) {
		a1 = a1 + b1;
		b1 = a1;
		cout << "\n\n Ответы \n\n Задание 1 \n\n А = " << a1 << ' ' << " b = " << b1;
	}
	else {
		a1 = b1 = 0;
		cout << "\n\n Ответы \n\n Задание 1 \n\n a = " << a1 << ' ' << " b = " << b1;
	}

	if (b <= c && b <= a) {
		cout << "\n\n Заданиеи 2 \n\n А+С = " << a + c;
	}
	else {
		if (a <= c && a <= b) {
			cout << "\n\n Заданиеи 2 \n\n В+С = " << b + c;
		}
		else {
			cout << "\n\n Заданиеи 2 \n\n В+A = " << b + a;
		}
	}

	if (abs(a2 - b2) < abs(a2 - c2)) {
		cout << "\n\n Задание 3 \n\n Точка " << b2 << endl;
		if ((a2 - b2) > 0)
			cout << " Расстояние " << a2 - b2;
		else if ((a2 - b2) < 0)
			cout << " Расстояние " << (a2 - b2) * -1;
	}
	else {
		cout << "\n\n Задание 3 \n\n Точка " << c2 << endl;
		if ((a2 - c2) > 0)
			cout << " Расстояние: " << a2 - c2;
		else if ((a2 - c2) < 0)
			cout << " Расстояние: " << (a2 - c2) * -1;
	}

	if (x > 0 && y > 0) {
		cout << "\n\n Задание 4 \n\n Первая четверть";
	}
	else if (x < 0 && y>0) {
		cout << "\n\n Задание 4 \n\n Вторая четверть";
	}
	else if (x < 0 && y < 0) {
		cout << "\n\n Задание 4 \n\n Третья четверть";
	}
	else
		cout << "\n\n Задание 4 \n\n Четвертая четверть";
	
	if(n == 0)
		cout << "\n\n Задание 5 \n\n Это нулевое число ";
	if ((n % 2 == 0) and (n > 0))
		cout << "\n\n Задание 5 \n\n Это положительное чётное число";
	if ((n % 2 == 0) and (n < 0))
		cout << "\n\n Задание 6 \n\n Это отрицательное чётное число";
	if ((n % 2 != 0) and (n > 0))
		cout << "\n\n Задание 6 \n\n Это положительное нечётное число";
	if ((n % 2 != 0) and (n < 0))
		cout << "\n\n Задание 6 \n\n Это отрицательное нечёное число";

	if ((m > 0) or (m < 1000)) {
		if ((m / 100 > 0 && m / 100 < 10) and (m % 2 == 0)) cout << "\n\n Задание 6 \n\n Трёхзначное чётное ";
		else if ((m / 10 > 0 && m / 10 < 10) and (m % 2 == 0)) cout << "\n\n Задание 6 \n\n Двухзначное чётное ";
		else if ((m / 10 == 0) and (m % 2 == 0)) cout << "\n\n Задание 6 \n\n Однозначное чётное ";
		if ((m / 100 > 0 && m / 100 < 10) and (m % 2 != 0)) cout << "\n\n Задание 6 \n\n Трёхзначное нечётное ";
		else if ((m / 10 > 0 && m / 10 < 10) and (m % 2 != 0)) cout << "\n\n Задание 6 \n\n Двухзначное нечётное ";
		else if ((m / 10 == 0) and (m % 2 != 0)) cout << "\n\n Задание 6 \n\n Однозначное нечётное ";
	}
	else {
		cout << "\n\n Задание 6 \n\n Данное число не входит в диапозон от 1 до 999 ";
	}
}
