#include <iostream>;
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	int x1, x2, y1, y2, x3, y3, st =2;
	float s, po, a, b, c, p;
	cout << "Введите значение координаты х1 для первой вершины треугольника для нахождения площади и пириметра ";
	scanf_s("%d", &x1);
	cout << "Введите значение координаты х2 для второй вершины треугольника для нахождения площади и пириметра ";
	scanf_s("%d", &x2);
	cout << " Ввдите значение координаты х3 для третьей вершины треугольника для нахождения площади и пириметра ";
	scanf_s("%d", &x3);
	cout << " Введите значение координаты у1 для первой вершины треугольника для нахождения площади и пириметра ";
	scanf_s("%d", &y1);
	cout << " Введите значенин координаты у2 для второй вершины треугольника для нахождения площади и пириметра ";
	scanf_s("%d", &y2);
	cout << " Введите значение координаты у3 для третьей верины треугольника для нахождения площади и пириметра ";
	scanf_s("%d", &y3);

	a = sqrt(pow(x2 - x1, st) + pow(y2 - y1, st));
	b = sqrt(pow(x3 - x2, st) + pow(y3 - y2, st));
	c = sqrt(pow(x1 - x3, st) + pow(y1 - y3, st));
	p = a + b + c;
	po = (float)p / 2;
	s = sqrt(po * (po - a) * (po - b) * (po - c));

	printf("\n\nОтветы\n\nПлощадь треугольника ровна = %f\n\nПериметр треугольника равен = %f\n\n", s, p);
	return 0;
}
