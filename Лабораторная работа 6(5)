#include <iostream>
#include <stdio.h>
#include <math.h>
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");

	int x, st1 = 6, st2 = 3;
	float y;

	cout << "\n\n Задание 5 \n\n Найти значение функции y = 4(x−3)^6 − 7(x−3)^3 + 2  \n\n Введите Х для решения уравнения ";
	cin >> x;

	y = 4 * pow(x - 3, st1) - 7 * pow(x - 3, st2) + 2;

	printf("\n\n Ответ \n\n y = %f \n\n", y );

}
