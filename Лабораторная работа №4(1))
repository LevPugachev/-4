#include <iostream>;
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	int a, b, s, p, r, c, n, sum, raz, m, f, g, sum1, raz1, m1, ch1, k, l;
	float d, sr, ch, mod;
	cout << " введите значение одной стороны прямоугольника(а) для нахождения площади ";
	scanf_s("%d", &a); //ввести значение a
	cout << " введите значение второй стороны прямоугольника(b) для нахождения площади ";
	scanf_s("%d", &b); //ввести значение b
	cout << " введите значение радиуса(r) для нахождения диаметра ";
	scanf_s("%d", &r); //ввести значение r
	cout << " введите любое число для нахождения среднего арифметического двух чисел ";
	scanf_s("%d", &f); //ввести значение f
	cout << " введите любое число для нахождения среднего арифметического двух чисел ";
	scanf_s("%d", &g); //ввести значение g
	cout << " введите любое ненулевое число(не равное нулю) для нахождения суммы, разности, произведения и частного кадратов ненулевых чисе ";
	scanf_s("%d", &n); //ввести значение с
	cout << " введите любое ненулевое число(не равное нулю) для нахождения суммы, разности, произведения и частного кадратов ненулевых чисе ";
	scanf_s("%d", &c); //ввести значение n
	cout << " введите любое ненулевое число(не равное нулю) для нахождения модулей суммы, разности, произведения и частного кадратов ненулевых чисе ";
	scanf_s("%d", &k); //ввести значение k
	cout << " введите любое ненулевое число(не равное нулю) для нахождения модулей суммы, разности, произведения и частного кадратов ненулевых чисе ";
	scanf_s("%d", &l); //ввести значение l
	const float pi = 3.14;

	s = a * b; //вычисление площади
	p = 2 * a + 2 * b; //вычисление пириметраж
	d = r * pi; //вычисление диаметра
	sr = (float)(f + g) / 2; //вычисление среднее арифмитическое двух чисел
	sum = (n * n) + (c * c); //вычисление суммы двух ненуливых числа
	raz = (n * n) - (c * c); //вычисление разности двух ненуливых числа
	m = (n * n) * (c * c); //вычисление произвдения двух ненуливых числа
	ch = (float)(n * n) / (c * c); //вычисление частного квадратов двух не нулевых чисел
	mod = abs((float)(k * k) / (l * l)); //вычисисление модуля частного квадратов двух чисел
	sum1 = abs((k * k) + (l * l)); //вычисление модуля суммы двух ненулевых чисел
	raz1 = abs((k * k) - (l * l)); //вычисление модуля разности двух ненулевых чисел
	m1 = abs((k * k) * (l * l)); //вычисление модуля произведения двух ненулевых чисел 

	printf("\nответы: \n\nПлощадь прямоугольника = %d\n\nПириметр прямоугольника = %d\n\nДиаметра = %f\n\nСреднее арифметическое = %f\n\nСумма двух ненуливых числа = %d\n\nРазности двух ненуливых числа = %d\n\nПроизвдения двух ненуливых числа = %d\n\nЧастное квадратов двух ненулевых чисел = %f\n\nМодуль частного квадратов ненулевых чисел = %f\n\nМодуль произведения ненулевых чисел  = %d\n\nМодуль разности ненулевых чисел = %d\n\nМодуль суммы ненулевых чисел = %d\n", s, p, d, sr, sum, raz, m, ch, mod, m1, raz1, sum1);
	return 0;
}
