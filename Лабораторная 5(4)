#include <iostream>;
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	int x1, x2, y1, y2, a, b, s, p;
	cout << "Введите значение координаты х1 для первой вершины прямоугольника для нахождения площади и пириметра ";
	scanf_s("%d", &x1);
	cout << "Введите значение координаты х2 для первой вершины прямоугольника для нахождения площади и пириметра ";
	scanf_s("%d", &x2);
	cout << "Введите значение координаты у1 для второй вершины прямоугольника для нахождения площади и пириметра ";
	scanf_s("%d", &y1);
	cout << "Введите значенин координаты у2 для второй вершины прямоугоьника для нахождения площади и пириметра ";
	scanf_s("%d", &y2);

	a = abs(y1) + abs(x1);
	b = abs(y2) + abs(x2);
	s = a * b;
	p = 2 * (a + b);

	printf("\n\nОтветы\n\nПлощадь прямоугольника = %d\n\nПериметр прямоугольника = %d\n", s, p);
}
