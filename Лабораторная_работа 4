#include <iostream>;
using namespace std;
int main()
{
setlocale(LC_ALL, "rus");
int a, b, s, p, r, c, n, sum, raz, m, ch, f, g;
float d, sr;
cout « " введите значение одной стороны прямоугольника(а) для нахождения площади ";
scanf_s("%d", &a); //ввести значение а
cout « " введите значение второй стороны прямоугольника(b) для нахождения площади ";
scanf_s("%d", &b); //ввести значение b
cout « " введите значение радиуса(r) для нахождения диаметра ";
scanf_s("%d", &r); //ввести значение r
cout « " введите любое число для нахождения среднего орифметического двух чисел ";
scanf_s("%d", &f); //ввести значение f
cout « " введите любое число для нахождения среднего орифметического двух чисел ";
scanf_s("%d", &g); //ввести значение g
cout « " введите любое не нулевое число(не равное нулю) для нахождения суммы, разности, произведения и частного вкадратов ненулевых чисе ";
scanf_s("%d", &c); //ввести значение с
cout « " введите любое ненулевое число(не равное нулю) для нахождения суммы, разности, произведения и частного вкадратов ненулевых чисе ";
scanf_s("%d", &n); //ввести значение n

const float pi = 3.14;
s = a * b; //вычисление площади
p = 2 * a + 2 * b; //вычисление пириметраж
d = r * pi; //вычисление диаметра
sr = (float)(a + b) / 2; //вычисление среднее арифмитическое двух чисел
sum = n + c; //вычисление суммы двух ненуливых числа
raz = n - c; //вычисление разности двух ненуливых числа
m = n * c; //вычисление произвдения двух ненуливых числа
ch = n * n + c * c; //вычисление частного квадратов двух не нулевых чисел
printf("ответы %d\nПлощадь прямоугольника = %d\nПириметр прямоугольника = %d\nдиаметр = %f\nСреднее арифметическое = %f\nсуммы двух ненуливых числа = %d\nразности двух ненуливых числа = %d\nпроизвдения двух ненуливых числа = %d\nчастное квадратов двух не нулевых чисел = %d", s, s, p, d, sr, sum, raz, m, ch);
return 0;
}
