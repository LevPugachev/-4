#include <iostream>
#include <cmath>
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	std::cout << "\n Метод Ньютона \n";
	std::cout << " Уравнение F(X) = X^2-2*cos(X)+1 \n";
	double x = 1, fx = 1, fxl;
	int a, b; // Концы отрезков
	char a1, b1, k; // Для ввода отрезка
	double e; // Точность
	int i = 1; // для подсчёта итераций
	std::cout << " Введите концы отрезка, например [3;9]\n ";
	std::cin >> a1 >> a >> k >> b >> b1;
	std::cout << "\n Введите точность ";
	std::cin >> e;
	while (abs(fx) > e) {
		fx = pow(x, 2) - 2 * cos(x) + 1;
		fxl = 2 * x + sin(x);
		std::cout << "\n Итерация №" << i << " корень равен " << x;
		i++;
		x = x - (fx / fxl);
	}
}


#include <iostream>
#include <math.h>
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	std::cout << "\n Метод хорд \n";
	std::cout << " Уравнение F(X) = X^2-2*cos(X)+1 \n";
	double x = 0, fx, fxl, a, b, fa, fb, fal, fbl, h = 1;
	char a1, b1, k; // Для ввода отрезка
	double e; // Точность
	int i = 1; // для подсчёта итераций
	std::cout << " Введите концы отрезка, например [3;9]\n ";
	std::cin >> a1 >> a >> k >> b >> b1;
	std::cout << "\n Введите точность ";
	std::cin >> e;
	while (b > e) {
		fa = pow(a, 2) - 2 * cos(a) + 1;
		fb = pow(b, 2) - 2 * cos(b) + 1;
		if (fa * fb < 0)
			x = b;
		b = b - (a - b) / (fa - fb) * fb;
		if (abs(x - b) > e)
		std::cout << "\n Итерация №" << i << " корень " << b;
		i++;
	}
}
