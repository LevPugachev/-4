#include <iostream>;
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	int x1, y1, x2, y2, s = 2, a, b, c, AC, BC, sum;
	float r;
	cout << "Введите значение х1 для первой точки ";
	scanf_s("%d", &x1);
	cout << "Введите значение у1 для первой точки ";
	scanf_s("%d", &y1);
	cout << "Введите значение х2 для второй точки ";
	scanf_s("%d", &x2);
	cout << "Введите значение у2 для второй точки ";
	scanf_s("%d", &y2);
	cout << "Введиите заначение для точки А на координатной прямой ";
	scanf_s("%d", &a);
	cout << "Введиите заначение для точки B на координатной прямой ";
	scanf_s("%d", &b);
	cout << "Введиите заначение для точки C на координатной прямой ";
	scanf_s("%d", &c);

	r = (float)sqrt(pow(x2-x1,s)+pow(y2-y1,s));
	AC = abs(c) + abs(a);
	BC = abs(c) + abs(b);
	sum = AC + BC;


	printf("\nОтветы\nРастояние между двумя точками = %f\n\nДлинна отрезка АС = %d\n\nДлинна отрезка ВС = %d\n\nСумма отрезков АС и ВС = %d\n\n", r, AC, BC, sum);
	return 0;
}
