#include <iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int a, A, c, B, n, m, k, v, x, z, l, j, h; 
	cout << " \n\n Задагние 1 \n\n Введите количество байт чтобы их перевести в килобайты ";
	scanf_s("%d", &a);
	cout << " \n\n Задание 2, 3 \n\n Введите значение точки А(А > 0) ";
	scanf_s("%d", &A);
	cout << " Введите значение точки B(B > 0 и В < А) ";
	scanf_s("%d", &B);
	cout << " \n\n Задание 4 \n\n Введите двузначное число(от 10 до 99), чтобы поменять местами две цифры ";
	scanf_s("%d", &v);
	cout << " \n\n Задание 5 \n\n Введите трехзначное число (от 100 до 999), чтобы зачернуть первую цифру и приписать её сзади ";
	scanf_s("%d", &h);

	if ((a)/(1024) == 1) {
		c = a / 1024;
	}
	else {
		c = (a) / (1024) + 1;
	}

	if (A > B) {
		n = A / B;
		m = B * n;
		k = A - m;
	}
	if ((v > 9) and (v < 100)) {
		x = (v / 10) + (v % 10) * 10;
	}
	else {
		cout << "\n В задаче 4 число не является двухзначным, поэтому нет верного решения\n\n";
		return 0;
	}

	if ((h > 99) and (h < 1000)) {
		z = h / 100;
		l = h % 100;
		j = l * 10 + z;
	}
	else {
		cout << "\n В задаче 5 число не является трёхзначным, поэтому нет верного решения\n\n";
		return 0;
	}

	printf("\n\n Ответы \n\n Задание 1\n\n Перевод в килобайты %d\n\n Задание 2\n\n Количество отрезков В, размещённых в А = %d\n\n Задание 3 \n\n Длинна не занятой части = %d\n\n Задание 4 \n\n Новое число = %d \n\n Задание 5 \n\n Новое число = %d \n\n", c, n, k, x, j);
}
