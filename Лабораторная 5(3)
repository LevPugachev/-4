#include <iostream>;
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	int a, b, c, AC, BC, pr;
	cout << "введите значение точки А на числовой оси ";
	scanf_s("%d", &a);
	cout << "Введите значение точки В на числовой оси ";
	scanf_s("%d", &b);
	cout << "Введите значение точки С на числовой оси так, чтобы она была между точками А и В ";
	scanf_s("%d", &c);
	if (((a > c) and (b < c)) or ((b > c) and (a < c))) {
		AC = abs(a) + abs(c);
		BC = abs(b) + abs(c);
		pr = AC * BC;
	}
	else {
		printf("\n\n С не находится между А и В, поэтому решения не будет", c);
	}
	printf("\nОтветы\n\nДлинна отрезка АС = %d\n\nДлинна отрезка BC = %d\n\nПроизведение сторон АС и ВС = %d\n\n", AC, BC, pr);
	return 0;
}
