#include <iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int a1, b1, c1, a2, b2, c2;
	float x, y;

	cout << " ЛИнейное уравнение: \n A1*x + B1*y = C1\n A2*x + B2* y = C2\n\n";
	cout << " Введите значение А1 для решения системы линейных уравнении ";
	scanf_s("%d", &a1);
	cout << " Введите значение А2 для решения системы линейных уравнении ";
	scanf_s("%d", &a2);
	cout << " Введите значение В1 для решения системы линейных уравнений ";
	scanf_s("%d", &b1);
	cout << " Введите значение В2 для решения системы линейных уравнений ";
	scanf_s("%d", &b2);
	cout << " Введите значение С1 для решения системы линейных уравнений ";
	scanf_s("%d", &c1);
	cout << " Введите значение С2 для решения системы линейных уравнений ";
	scanf_s("%d", &c2);

	x = (float)(c2 - (b2 * c1)) / ((b1 * a2) - a1);
	y = (float)(c1 - (a1 * x)) / b1;

	printf("\n\n Ответы\n\n X = %f\n\n Y = %f\n\n", x, y);
}
