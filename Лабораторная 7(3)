#include <iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int a, x, y, v, s, sum, v1, v2, s1, t, s2;
	cout << " Введите количесвто килограммов(х) конфет ";
	scanf_s("%d", &x);
	cout << " Введите цену за этот килограм конфет ";
	scanf_s("%d", &a);
	cout << " введите количество киллограмов(у), чтобы найти цену У кг конфет ";
	scanf_s("%d", &y);

	s = a / x;
	v = y * s;


	printf("\n\n Ответы\n\n Стоимость 1 кг конфет = %d\n\n Стоимость У кг конфет = %d\n", s, v);
}
