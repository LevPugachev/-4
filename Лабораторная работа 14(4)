
#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");
    float p, k = 0, s = 1000;
    cout << "\n\n Задание 4 \n\n Введите P процентов(0 < P < 25) ";
    cin >> p;

    while (s <= 1100)
    {
        k++;
        s += s * p / 100;
    }

	cout << "\n\n Задание 4 \n\n Итоговый размер вклада: " << s << " \n Количество месяцев " << k << endl;

	return 0;
}
