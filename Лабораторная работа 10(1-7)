	cout << " Введите значени стороны B треугольника ";
	scanf_s("%d", &b2);
	cout << " Введите значени стороны C треугольника ";
	scanf_s("%d", &c2);
	cout << "\n\n Задание 7 \n\n Введите целое значение А, А = ";
	scanf_s("%d", &a3);
	cout << " Введите целое значение В, В = ";
	scanf_s("%d", &b3);
	cout << " Введите целое значение C, C = ";
	scanf_s("%d", &c3);

	if ((a > 2) and (b <= 3)) {
		cout << "\n\n Задание 1 \n\n Неравенство верно \n";
	}
	else {
		cout << "\n\n Задание 1 \n\n Неравенство не верно \n";
	}

	if ((b1 > a1) and (b1 < c1)) {
		cout << "\n\n Задание 2 \n\n Высказывание верно \n";
	}
	else {
		cout << "\n\n Задание 2 \n\n Высказывание не верно \n";
	}

	if ((c > 0) and (c % 2 == 0) and (c >= 10) and (c < 100)) {
		cout << "\n\n Задание 3 \n\n Данное число является четным двузначным \n";
	}
	else {
		cout << "\n\n задание 3 \n\n Данное число не является четным двузначным \n";
	}

	if ((d >= 100) and (d < 1000) and ((d == 123) or (d == 234) or (d == 345) or (d == 456) or (d == 567) or (d == 678) or (d == 789) or (d == 987) or (d == 876) or (d == 765) or (d == 654) or (d == 543) or (d == 432) or (d == 321) or (d == 210))) {
		cout << "\n\n Заание 4 \n\n Цифры данного числа образуют возрастающую или убывающую последовательность \n";
	}
	else {
		cout << "\n\n Задание 4 \n\n Цифры данного числа не образуют возрастающую или убывающую последовательность \n";
	}

	if ((e >= 1000) and (e < 10000) and ((e == 1111) or (e == 1001) or (e == 1221) or (e == 1331) or (e == 1441) or (e == 1551) or (e == 1661) or (e == 1771) or (e == 1881) or (e == 1991) or (e == 2112) or (e == 2222) or (e == 2002) or (e == 2332) or (e == 2442) or (e == 2552) or (e == 2662) or (e == 2772) or (e == 2992) or (e == 2882) or (e == 3003) or (e == 3113) or (e == 3223) or (e == 3333) or (e == 3443) or (e == 3553) or (e == 3663) or (e == 3773) or (e == 3993) or (e == 3883) or (e == 4004) or (e == 4114) or (e == 4224) or (e == 4334) or (e == 4444) or (e == 4554) or (e == 4664) or (e == 4774) or (e == 4884) or (e == 4994) or (e == 5005) or (e == 5115) or (e == 5225) or (e == 5335) or (e == 5445) or (e == 5555) or (e == 5665) or (e == 5775) or (e == 5885) or (e == 5995) or (e == 6006) or (e == 6116) or (e == 6226) or (e == 6336) or (e == 6446) or (e == 6556) or (e == 6666) or (e == 6776) or (e == 6886) or (e == 6996) or (e == 7007) or (e == 7117) or (e == 7227) or (e == 7337) or (e == 7447) or (e == 7557) or (e == 7667) or (e == 7777) or (e == 7887) or (e == 7997) or (e == 8008) or (e == 8118) or (e == 8228) or (e == 8338) or (e == 8448) or (e == 8558) or (e == 8668) or (e == 8778) or (e == 8888) or (e == 8998) or (e == 9009) or (e == 9119) or (e == 9229) or (e == 9339) or (e == 9449) or (e == 9559) or (e == 9669) or (e == 9779) or (e == 9889) or (e == 9999))) {
		cout << "\n\n Задание 5 \n\n Данное число читается одинаково слева направо и справа налево \n";
	}
	else {
		cout << "\n\n Задание 5 \n\n Данное число не читается одинаково слева направо и справа налево \n";
