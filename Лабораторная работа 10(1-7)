	scanf_s("%d", &a1);
	cout << " Введите значение В для проверки истинности выржения B = ";
	scanf_s("%d", &b1);
	cout << " Введите значение С для проверки истинности выржения C = ";
	scanf_s("%d", &c1);
	cout << "\n\n Задание 3 \n\n Введите любое целое положительное число ";
	scanf_s("%d", &c);
	cout << "\n\n Задание 4 \n\n Введите трёхзначное число так, чтобы цыфры обраовали возрастающую или убывающую последовательность ";
	scanf_s("%d", &d);
