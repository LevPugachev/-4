	if ((sqrt(a2 * a2 + b2 * b2) == c2) or (sqrt(b2 * b2 + c2 * c2) == a2) or (sqrt(a2 * a2 + c2 * c2) == b2)) {
		cout << "\n\n Задание 6 \n\n Треугольник со сторонами a, b, c является прямоугольным \n";
	}
	else {
		cout << "\n\n Задание 6 \n\n Треугольник со сторонами a, b, c не является прямоугольным \n";
	}

	if ((a + b) > c && (a + c) > b && (b + c) > a) {
		cout << "\n\n Задание 7 \n\n Существует треугольник со сторонами a, b, c \n";
	}
	else {
		cout << "\n\n Задание 7 \n\n Не существует треугольник со сторонами a, b, c \n";
