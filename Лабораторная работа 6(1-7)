#include <iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int a, b, z, k, c, s, v, y, x, st1 = 6, st2 = 2, x1, y1, a1, b1, c1, n, m, p, l, g, h, a2, b2, A, A1, b3, b4, c4;
	cout << "\n\n Задание 1 \n\n Введите значение А = ";
	scanf_s("%d", &a2);
	cout << " Введите значение В = ";
	scanf_s("%d", &b2);
	cout << "\n Хадание 2 \n\n Введите значение А = ";
	scanf_s("%d", &a1);
	cout << " Введите значение B = ";
	scanf_s("%d", &b1);
	cout << " Введите значение C = ";
	scanf_s("%d", &c1);
	cout << "\n Задание 3\n\n Введите значение А = ";
	scanf_s("%d", &a);
	cout << " Введите значение В = ";
	scanf_s("%d", &b);
	cout << " Введите значение С = ";
	scanf_s("%d", &c);
	cout << "\n Задание 4\n\n Введите значение х для нахождения значения функции ";
	scanf_s("%d", &x);
	cout << "\n  Задание 5\n\n Введите ещё одно значение х для нахождения значения другой функции ";
	scanf_s("%d", &x1);

	cout << "\n Задание 6 \n\n Введите значение А для вычисления А в 8 степени ";
	scanf_s("%d", &A);
	cout << "\n Задание 7 \n\n Введите значение А для вычисления А в 15 степени ";
	scanf_s("%d", &A1);

	g = a2;
	h = b2;

	a2 = h;
	b2 = g;

	l = a1;
	p = b1;
	m = c1;

	b1 = l;
	c1 = p;
	a1 = m;

	v = a;
	z = b;
	s = c;
	c = v;
	b = s;
	a = z;

	y = 3 * pow(x, st1) - 6 * x * x - 7;

	y1 = 4 * pow(x1 - 3, st1) - 7 * (x - 3) * (x - 3) * (x - 3) + 2;

	b3 = A * A;
	b3 = b3 * b3;
	b3 = b3 * b3;
	A = b3;

	b4 = A1 * A1;
	c4 = b4 * A1;
	b4 = b4 * c4;
	c4 = b4 * b4;
	b4 = b4 * c4;
	A1 = b4;

	printf("\n\n Ответы \n\n Задание 1 \n\n A = %d\n\n B = %d\n\n Хадание 2 \n\n А = %d \n\n B = %d \n\n C = %d \n\n Задание 3 \n\n А = %d \n\n B = %d \n\n C = %d \n\n Здание 4 \n\n Значение функции(у) = %d \n\n Задание 5 \n\n Значение другой функции(у) = %d \n\n Задание 6 \n\n A^8 = %d \n\n Задание 7 \n\n А^15 = %d \n\n",a2, b2, a1, b1, c1, a, b, c, y, y1, A, A1);

}
