#include <stdio.h>
#include <math.h>
#include <iostream>
using namespace std;
int main(void)
{
    setlocale(LC_ALL, "rus");
    float A1, B1, C1, A2, B2, C2;
    printf("\n\n Задание 6 \n\n A1 = ");
    scanf_s(" %f", &A1);

    printf(" B1 = ");
    scanf_s(" %f", &B1);

    printf(" C1 = ");
    scanf_s(" %f", &C1);

    printf(" A2 = ");
    scanf_s(" %f", &A2);

    printf(" B2 = ");
    scanf_s(" %f", &B2);

    printf(" C2 = ");
    scanf_s(" %f", &C2);

    float D;
    D = A1 * B2 - A2 * B1;

    float x, y;
    x = (C1 * B2 - C2 * B1) / D;
    y = (A1 * C2 - A2 * C1) / D;

    if (x == -0) {
        x = 0;
    }
    if (y == -0) {
        y = 0;
    }

    printf("\n\n Задание 6 \n\n x = %f \n\n y = %f \n\n", x, y);


    return 0;
}
