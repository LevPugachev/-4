#include <iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "rus");
	int a, b, z, k, c, s, v, y, x, st1 = 6, st2 = 2, x1, y1;
    cout << " Введите значение А = ";
	scanf_s("%d", &a);
	cout << " Введите значение В = ";
	scanf_s("%d", &b);
	cout << " Введите значение С = ";
	scanf_s("%d", & c);
	cout << " Введите значение х для нахождения значения функции ";
	scanf_s("%d", &x);
	cout << " Введите ещё одно значение х для нахождения значения другой функции ";
	scanf_s("%d", &x1);

	v = a;
	z = b;
	s = c;
	c = v;
	b = s;
	a = z;

	y = 3 * pow(x, st1) - 6 * pow(x, st2) - 7;
    y1 = 4 * pow(x1 - 3, st1) - 7 * (x-3) * (x - 3) * (x - 3) + 2;

	printf("\n\n Ответы \n\n А = %d\n\n B = %d\n\nC = %d\n\n Значение функции(у) = %d\n\n Значение другой функции(у) = %d\n\n", a, b, c, y, y1);

}
